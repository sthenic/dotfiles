{
    "Makefile": {
        "prefix": "make",
        "body": [
            "CXX      := gcc",
            "CXXFLAGS := -Wall -Wextra -Werror",
            "LDFLAGS  := -L/usr/lib",
            "BUILD    := ./build",
            "OBJ_DIR  := $(BUILD)/objects",
            "APP_DIR  := $(BUILD)/apps",
            "TARGET   := app",
            "INCLUDE  := -Iinclude/",
            "SRC      := $(wildcard src/*.c)",
            "",
            "OBJECTS := $(SRC:%.cpp=$(OBJ_DIR)/%.o)",
            "",
            "all: build $(APP_DIR)/$(TARGET)",
            "",
            "$(OBJ_DIR)/%.o: %.cpp",
            "\t@mkdir -p $(@D)",
            "\t$(CXX) $(CXXFLAGS) $(INCLUDE) -o $@ -c $<",
            "",
            "$(APP_DIR)/$(TARGET): $(OBJECTS)",
            "\t@mkdir -p $(@D)",
            "\t$(CXX) $(CXXFLAGS) $(INCLUDE) $(LDFLAGS) -o $(APP_DIR)/$(TARGET) $(OBJECTS)",
            "",
            ".PHONY: all build clean debug release",
            "",
            "build:",
            "\t@mkdir -p $(APP_DIR)",
            "\t@mkdir -p $(OBJ_DIR)",
            "",
            "debug: CXXFLAGS += -DDEBUG -g",
            "debug: all",
            "",
            "release: CXXFLAGS += -O2",
            "release: all",
            "",
            "clean:",
            "\t-@rm -rvf $(OBJ_DIR)/*",
            "\t-@rm -rvf $(APP_DIR)/*"
        ]
    }
}
